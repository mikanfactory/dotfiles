{
  "permissions": {
    "defaultMode": "plan",
    "allow": [
      "Bash",
      "Read",
      "Edit",
      "Skill",
      "MultiEdit",
      "WebSearch",
      "WebFetch",
      "Search(*)",
      "mcp__mlflow-mcp*",
      "mcp__plugin_sentry_sentry*"
    ],
    "deny": ["Read(.env)", "Bash(terraform:*)", "Bash(git push origin main)"],
    "ask": [
      "Bash(rm *)",
      "Bash(git commit --amend)",
      "Bash(git commit --amend *)",
      "Bash(git rebase)",
      "Bash(git rebase *)"
    ]
  },
  "model": "opus",
  "enabledMcpjsonServers": [],
  "enabledPlugins": {
    "pyright-lsp@claude-plugins-official": true,
    "typescript-lsp@claude-plugins-official": true
  },
  "mcpServers": {},
  "hooks": {
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "osascript -e 'display notification \"Invoke Stop event.\" with title \"Claude Code\" sound name \"Glass\"'"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "osascript -e 'display notification \"Invoke Stop event.\" with title \"Claude Code\" sound name \"Glass\"'"
          }
        ]
      }
    ]
  },
  "env": {
    "CLAUDE_CODE_EXPERIMENTAL_AGENT_TEAMS": "1"
  }
}
