{
  "permissions": {
    "allow": [
      "Bash",
      "Read",
      "Edit",
      "Skill",
      "MultiEdit",
      "WebSearch",
      "WebFetch",
      "Search(*)"
    ],
    "deny": [
      "Read(.env)",
      "Bash(terraform:*)",
      "Bash(git push origin main)"
    ],
    "ask": [
      "Bash(rm:*)"
    ]
  },
  "model": "opus",
  "enabledMcpjsonServers": [
    "context7",
    "serena",
    "jetbrains",
    "brave-search"
  ],
  "mcpServers": {
    "context7": {
      "type": "http",
      "url": "https://mcp.context7.com/mcp",
      "headers": {
        "CONTEXT7_API_KEY": "{{ (bitwardenFields "item" "claude-code-mcp-tokens").context7.value }}"
      }
    },
    "mlflow-mcp": {
      "command": "uv",
      "args": ["run", "--with", "mlflow[mcp]>=3.5.1", "mlflow", "mcp", "run"],
      "env": {
        "MLFLOW_TRACKING_URI": "{{ (bitwardenFields "item" "claude-code-mcp-tokens").mlflow_tracking_uri.value }}",
        "DATABRICKS_HOST": "{{ (bitwardenFields "item" "claude-code-mcp-tokens").databricks_host.value }}",
        "DATABRICKS_TOKEN": "{{ (bitwardenFields "item" "claude-code-mcp-tokens").databricks_token.value }}"
      }
    }
  },
  "hooks": {
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "osascript -e 'display notification \"Invoke Stop event.\" with title \"Claude Code\" sound name \"Glass\"'"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "osascript -e 'display notification \"Invoke Stop event.\" with title \"Claude Code\" sound name \"Glass\"'"
          }
        ]
      }
    ]
  }
}
