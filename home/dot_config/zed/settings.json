{
  "session": {
    "trust_all_worktrees": true
  },
  "base_keymap": "JetBrains",
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "One Dark"
  },
  "ui_font_size": 18,
  "buffer_font_size": 18,
  "autosave": {
    "after_delay": {
      "milliseconds": 1000
    }
  },
  "vim_mode": true,
  "languages": {
    "Python": {
      "format_on_save": {
        "external": {
          "command": "black",
          "arguments": ["-"]
        }
      }
    }
  }
}
