#!/bin/bash
{{ if eq .chezmoi.os "darwin" -}}
echo "Installing Homebrew packages..."

# Homebrew formulae
brew bundle --no-lock --file=/dev/stdin <<EOF
# Core tools
brew "bat"
brew "curl"
brew "exa"
brew "git"
brew "navi"
brew "neovim"
brew "peco"
brew "starship"
brew "tig"
brew "tmux"

# Casks
cask "font-roboto-mono-nerd-font"
cask "hyper"
EOF
{{ end -}}
