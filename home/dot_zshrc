# fundamental
WORDCHARS='*?_-[]~&;!#$%^(){}<>|.'

autoload -U compinit
compinit
HISTFILE=~/.zsh_history
HISTSIZE=10000
SAVEHIST=10000
setopt hist_ignore_dups
setopt share_history
bindkey -e
setopt auto_pushd
setopt correct
setopt nolistbeep
setopt list_packed
disable r

# NOTE: EDITOR, VISUAL, LC_ALL, LANG, PATH are managed by mise
# See ~/.config/mise/config.toml

# NOTE: Normal aliases are managed by mise shell_alias
# See ~/.config/mise/config.toml

# global alias (zsh-specific, not supported by mise)
alias -g P="| peco"
alias -g J="| jq ."
alias -g H='| head'
alias -g T='| tail'
alias -g G='| grep'
alias -g L="| less"
alias -g W="| wc -l"

# export peco custom functions
source "$ZRCDIR/peco.sh"

# export custom environment
source "$ZRCDIR/local_env.sh"

# auto suggestion
# source ~/.zsh/zsh-autosuggestions/zsh-autosuggestions.zsh

# starship
eval "$(starship init zsh)"
